<div class="item-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">投稿作成</h1>
        <%= form_for @item do |f| %>
        
          <div class="form-group">
            <%= f.label :image, '画像' %>
            <%= f.file_field :image %>
          </div>
          
          <div class="form-group">
            <%= f.label :product, '商品名 ※最大30文字' %>
            <%= f.text_field :product, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :price, '価格 ※数字を入力' %>
            <%= f.number_field :price, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :description, '説明 ※最大500文字' %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          
          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
          
        <% end %>  
      </div>
    </div>
  </div>
</div>
