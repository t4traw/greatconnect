<div class="item-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">投稿の編集</h1>
        <%= form_for @item do |f| %>
        
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image %>
          </div>
          
          <div class="form-group">
            <%= f.label :product %>
            <%= f.text_field :product, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :price %>
            <%= f.text_field :price, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          
          <% if logged_in? %>
            <%= f.submit '編集する', class: 'btn btn-black btn-block' %>
          <% end %>
          
        <% end %>  
      </div>
    </div>
  </div>
</div>