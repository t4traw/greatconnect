<!DOCTYPE html>
<html>
  <head>
    <title>Greatconnect</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
    
    <script>
      $(function(){
        $(".alert").fadeOut(5000);
      });
    </script>
    
    <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
      <div class="container">
        <%= link_to root_path do %>
          <p class="navbar-brand">GreatConnect</p> 
        <% end %>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li>
              <%= link_to root_path do %>
                <%= image_tag "icon/home.png" %>
                <p>ホーム</p>
              <% end %>
            </li>
            <li>
              <%= link_to new_item_path do %>
                <%= image_tag "icon/post.png", class: "abcd" %>
                <p>投稿する</p>
              <% end %>
            </li>
            <li>
              <%= link_to items_path do %>
                <%= image_tag "icon/list of posts.png", class: "abcd" %>
                <p>マーケット</p>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <%= image_tag "icon/message3.png", class: "abcd" %>
                <p>メッセージ</p>
              <% end %>
            </li>
            <li>
              <%= link_to likes_index_path do %>
                <%= image_tag "icon/favorite.png", class: "abcd" %>
                <p>お気に入り</p>
              <% end %>
            </li>
            <li>
              <%= link_to users_path do %>
                <%= image_tag "icon/myposts.png", class: "abcd" %>
                <p>自分の投稿</p>
              <% end %>
            </li>
            <li>
              <%= link_to logout_path, method: :delete do %>
                <%= image_tag "icon/logout.png", class: "abcd" %>
                <p>ログアウト</p>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to root_path do %>
                <%= image_tag "icon/home.png" %>
                <P>ホーム</P>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <%= image_tag "icon/list of posts.png", class: "abcd" %>
                <p>マーケット</p>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_path do %>
                <%= image_tag "icon/post.png", class: "abcd" %>
                <p>新規登録</p>
              <% end %>
            </li>
            <li>
              <%= link_to login_path do %>
                <%= image_tag "icon/login.png" %>
                <p>ログイン</p>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>


    <%= yield %>
  </body>
</html>
